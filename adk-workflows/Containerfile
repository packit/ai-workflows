FROM fedora:42

# Install system dependencies
RUN dnf install -y \
    python3 \
    python3-pip \
    glab \
    git \
    curl \
    python-jira \
    rpmlint \
    rpmdevtools \
    rpmbuild \
    spectool

# Install Google ADK and Phoenix tracing
RUN pip3 install openinference-instrumentation-google-adk google-adk arize-phoenix-otel

# Create user
RUN useradd -m -G wheel adk

# Create directories
RUN mkdir -p /home/adk/.config/adk /home/adk/agents
RUN chown -R adk:adk /home/adk

USER adk
WORKDIR /home/adk

CMD ["/usr/bin/bash"]
