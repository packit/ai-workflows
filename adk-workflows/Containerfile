FROM fedora:42

# Install system dependencies
RUN dnf install -y \
    python3 \
    python3-pip \
    glab \
    git \
    curl \
    python-jira \
    rpmlint \
    rpmdevtools \
    rpmbuild \
    spectool

# Install Google ADK
RUN pip3 install google-adk

# Create user
RUN useradd -m -G wheel adk

# Create directories
RUN mkdir -p /home/adk/.config/adk /home/adk/agents
RUN chown -R adk:adk /home/adk

USER adk
WORKDIR /home/adk

CMD ["/usr/bin/bash"]
