FROM fedora:42

# Install system dependencies
RUN dnf -y install \
      make \
      python3 \
      python3-copr \
      python3-flexmock \
      python3-ogr \
      python3-pip \
      python3-pytest \
      python3-pytest-asyncio \
      python3-specfile \
    && dnf clean all

# Install BeeAI Framework and FastMCP
RUN pip3 install --no-cache-dir beeai-framework fastmcp

WORKDIR /src
